# =============================
# üì¶ APP (configurazione base)
# =============================
APP_NAME="Synapsy"
APP_ENV=local             # local | staging | production
APP_KEY=                  # php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost:8484
SERVER_PORT=8484

APP_LOCALE=it
APP_FALLBACK_LOCALE=en
TIMEZONE=Europe/Rome

# =============================
# üåê URL Frontend
# =============================
FRONTEND_URL=http://localhost:3000

# =============================
# ü™µ Logging
# =============================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DAILY_DAYS=14

# =============================
# üóÑ Database (scegli MySQL o PostgreSQL)
# =============================

## MySQL (locale)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=synapsi_local
DB_USERNAME=root
DB_PASSWORD=

## PostgreSQL (cloud/beta/prod)
# DB_CONNECTION=pgsql
# DB_HOST=
# DB_PORT=5432
# DB_DATABASE=
# DB_USERNAME=
# DB_PASSWORD=
# DB_SCHEMA=public

# =============================
# üîê Autenticazione
# =============================
AUTH_MODEL=Modules\\User\\Models\\User

# =============================
# üç™ Sessione & CORS
# =============================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost                   # in prod: .tuodominio.com
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8484

# =============================
# üì¨ Code, Cache, Queue
# =============================
QUEUE_CONNECTION=database
CACHE_STORE=file

# =============================
# üü• Redis (opzionale)
# =============================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================
# üìß Mail
# =============================
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tuodominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================
# ‚òÅÔ∏è AWS S3 (opzionale)
# =============================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================
# üõ† Vite (se usato in dev)
# =============================
VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL=http://127.0.0.1:5173

# =============================
# üîë JWT
# =============================
JWT_SECRET=
JWT_ALGO=HS256

# =============================
# ü§ñ Machine Learning
# =============================
ML_CATEGORY_SUGGESTER_BASE_URL=http://localhost:7001
