{
  "compilerOptions": {
    // =========================
    // Target & Module
    // =========================
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    // =========================
    // Type system
    // =========================
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    // =========================
    // JSX / TS transpile
    // =========================
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // =========================
    // Editor & tooling
    // =========================
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // =========================
    // Path alias
    // =========================
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tailwind.config.ts",
    "postcss.config.*",
    "next.config.*"
  ]
}
